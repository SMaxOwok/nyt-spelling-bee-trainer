{
  "name": "NYT Spelling Bee Trainer",
  "description": "Display answers sorted by length in game window.",
  "version": "1.5",
  "manifest_version": 2,
  "author": "Max Ono",

  "browser_action": {
    "default_popup": "./index.html",
    "default_title": "Open NYT Spelling Bee Trainer",
    "default_icon": "./icon.png"
  },

  "content_scripts": [
    {
      "matches": ["*://www.nytimes.com/puzzles/spelling-bee"],
      "all_frames": true,
      "js": ["./content.js"],
      "run_at": "document_end"
    }
  ]
}
